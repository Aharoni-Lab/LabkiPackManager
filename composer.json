{
  "name": "aharoni-lab/labkipackmanager",
  "description": "MediaWiki extension to import Labki content packs from YAML manifests",
  "type": "mediawiki-extension",
  "license": "EUPL-1.2",
  "require": {
    "php": ">=8.1",
    "symfony/yaml": "^5.4 || ^6.0"
  },
  "autoload": {
    "psr-4": {
      "LabkiPackManager\\": "includes/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "LabkiPackManager\\Tests\\": "tests/phpunit/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6",
    "phpunit/php-code-coverage": "^9.2",
    "mediawiki/mediawiki-codesniffer": "^48.0",
    "mediawiki/core": "^1.44",
    "doctrine/dbal": "^3.6"
  },
  "scripts": {
    "test": [
      "phpunit --colors=always"
    ],
    "phpunit:entrypoint": [
      "php -d display_errors=1 vendor/bin/phpunit --configuration tests/phpunit.xml.dist"
    ],
    "fix": [
      "vendor/bin/phpcbf"
    ],
    "lint": [
      "vendor/bin/phpcs"
    ]
  },
  "config": {
    "allow-plugins": {
      "wikimedia/composer-merge-plugin": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
